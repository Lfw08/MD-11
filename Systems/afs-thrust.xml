<PropertyList>
	
	<filter>
		<name>A/THR Knots Input Gain</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>/it-autoflight/internal/kts</input>
		<output>/it-autoflight/internal/athr-kts-cmd</output>
		<min>
			<expression>
				<difference>
					<property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
					<value>25</value>
				</difference>
			</expression>
		</min>
		<max>
			<expression>
				<sum>
					<property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
					<value>25</value>
				</sum>
			</expression>
		</max>
	</filter>
	
	<filter>
		<name>A/THR Knots Input Filter</name>
		<type>noise-spike</type>
		<feedback-if-disabled>true</feedback-if-disabled>
		<initialize-to>output</initialize-to>
		<input>/it-autoflight/internal/athr-kts-cmd</input>
		<output>/it-autoflight/internal/athr-kts</output>
		<max-rate-of-change>
			<condition>
				<and>
					<property>/it-autoflight/output/athr-on</property>
					<equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/it-autoflight/internal/kts-mach</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/gear/gear[1]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/gear/gear[2]/wow</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
			<value>10</value>
		</max-rate-of-change>
		<max-rate-of-change>200</max-rate-of-change>
	</filter>
	
	<filter>
		<name>A/THR Mach Input Gain</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>/it-autoflight/internal/mach</input>
		<output>/it-autoflight/internal/athr-mach-cmd</output>
		<min>
			<expression>
				<difference>
					<property>/instrumentation/airspeed-indicator/indicated-mach</property>
					<value>0.045</value>
				</difference>
			</expression>
		</min>
		<max>
			<expression>
				<sum>
					<property>/instrumentation/airspeed-indicator/indicated-mach</property>
					<value>0.045</value>
				</sum>
			</expression>
		</max>
	</filter>
	
	<filter>
		<name>A/THR Mach Input Filter</name>
		<type>noise-spike</type>
		<feedback-if-disabled>true</feedback-if-disabled>
		<initialize-to>output</initialize-to>
		<input>/it-autoflight/internal/athr-mach-cmd</input>
		<output>/it-autoflight/internal/athr-mach</output>
		<max-rate-of-change>
			<condition>
				<and>
					<property>/it-autoflight/output/athr-on</property>
					<equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/it-autoflight/internal/kts-mach</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/gear/gear[1]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/gear/gear[2]/wow</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
			<value>0.08</value>
		</max-rate-of-change>
		<max-rate-of-change>2</max-rate-of-change>
	</filter>
	
	<pid-controller>
		<name>IT-CONTROLLER: Knots</name>
		<enable>
			<condition>
				<and>
					<property>/it-autoflight/output/athr-on</property>
					<equals>
						<property>/it-autoflight/internal/kts-mach</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>/instrumentation/airspeed-indicator/indicated-speed-kt</input>
		<reference>/it-autoflight/internal/athr-kts</reference>
		<output>/fdm/jsbsim/fadec/ats-cmd-raw</output>
		<config>
			<Kp>0.055</Kp>
			<Ti>9.0</Ti>
			<Td>0.00001</Td>
			<u_min>/fdm/jsbsim/fadec/limit/idle-norm</u_min>
			<u_max>/fdm/jsbsim/fadec/limit/active-norm</u_max>
		</config>
	</pid-controller>
	
	<pid-controller>
		<name>IT-CONTROLLER: Mach</name>
		<enable>
			<condition>
				<and>
					<property>/it-autoflight/output/athr-on</property>
					<equals>
						<property>/it-autoflight/internal/kts-mach</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>
			<property>/instrumentation/airspeed-indicator/indicated-mach</property>
			<scale>1000</scale>
		</input>
		<reference>
			<property>/it-autoflight/internal/athr-mach</property>
			<scale>1000</scale>
		</reference>
		<output>/fdm/jsbsim/fadec/ats-cmd-raw</output>
		<config>
			<Kp>0.055</Kp>
			<Ti>9.0</Ti>
			<Td>0.00001</Td>
			<u_min>/fdm/jsbsim/fadec/limit/idle-norm</u_min>
			<u_max>/fdm/jsbsim/fadec/limit/active-norm</u_max>
		</config>
	</pid-controller>
	
	<filter>
		<name>IT-CONTROLLER: Idle Limit</name>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<and>
					<property>/it-autoflight/output/athr-on</property>
					<equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>1</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>0</input>
		<output>/fdm/jsbsim/fadec/ats-cmd-raw</output>
	</filter>
	
	<filter>
		<name>IT-CONTROLLER: Thrust Limit</name>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<and>
					<property>/it-autoflight/output/athr-on</property>
					<equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>2</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>/fdm/jsbsim/fadec/limit/active-norm</input>
		<output>/fdm/jsbsim/fadec/ats-cmd-raw</output>
	</filter>
	
	<filter>
		<name>System Command: Throttle Saturated</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<greater-than-equals>
					<expression>
						<sum>
							<property>/fdm/jsbsim/fadec/ats-cmd-raw</property>
							<value>0.01</value>
						</sum>
					</expression>
					<property>/fdm/jsbsim/fadec/limit/active-norm</property>
				</greater-than-equals>
			</condition>
			<value>2</value>
		</input>
		<input>
			<condition>
				<less-than-equals>
					<expression>
						<difference>
							<property>/fdm/jsbsim/fadec/ats-cmd-raw</property>
							<value>0.01</value>
						</difference>
					</expression>
					<property>/fdm/jsbsim/fadec/limit/idle-norm</property>
				</less-than-equals>
			</condition>
			<value>1</value>
		</input>
		<input>0</input>
		<output>/it-autoflight/internal/throttle-saturated</output>
	</filter>
	
	<filter>
		<name>System Command: Throttle</name>
		<type>noise-spike</type>
		<feedback-if-disabled>true</feedback-if-disabled>
		<initialize-to>output</initialize-to>
		<enable>
			<condition>
				<property>/it-autoflight/output/athr-on</property>
			</condition>
		</enable>
		<input>/fdm/jsbsim/fadec/ats-cmd-raw</input>
		<output>/fdm/jsbsim/fadec/ats-cmd</output>
		<min>
			<condition>
				<equals>
					<property>/it-autoflight/output/thr-mode</property>
					<value>1</value>
				</equals>
			</condition>
			<value>0</value>
		</min>
		<min>/fdm/jsbsim/fadec/limit/idle-norm</min>
		<max>/fdm/jsbsim/fadec/limit/max-norm</max>
		<max-rate-of-change>
			<condition>
				<or>
					<and>
						<equals>
							<property>/it-autoflight/mode/spd</property>
							<value>RETARD</value>
						</equals>
						<or>
							<equals>
								<property>/gear/gear[1]/wow</property>
								<value>1</value>
							</equals>
							<equals>
								<property>/gear/gear[2]/wow</property>
								<value>1</value>
							</equals>
						</or>
					</and>
					<equals> <!-- Don't slow throttle in T/O or G/A -->
						<property>/it-autoflight/output/vert</property>
						<value>7</value>
					</equals>
				</or>
			</condition>
			<value>0.3</value>
		</max-rate-of-change>
		<max-rate-of-change>
			<condition>
				<or>
					<equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>2</value>
					</equals>
				</or>
			</condition>
			<value>0.05</value>
		</max-rate-of-change>
		<max-rate-of-change>0.3</max-rate-of-change>
	</filter>
	
	<filter>
		<name>System Command: Throttle Comparator</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<expression>
				<max>
					<property>/controls/cockpit/throttle-lever[0]</property>
					<property>/controls/cockpit/throttle-lever[1]</property>
					<property>/controls/cockpit/throttle-lever[2]</property>
				</max>
			</expression>
		</input>
		<output>/fdm/jsbsim/fadec/throttle-compare-max</output>
	</filter>
	
	<filter>
		<name>System Command: Throttle Inactive Sync</name>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<not><property>/it-autoflight/output/athr-on</property></not>
			</condition>
		</enable>
		<input>/fdm/jsbsim/fadec/throttle-compare-max</input>
		<output>/fdm/jsbsim/fadec/ats-cmd</output>
	</filter>
	
	<!-- Engine 1 -->
	<filter>
		<name>System Command: Throttle 1 Filter</name>
		<type>noise-spike</type>
		<initialize-to>output</initialize-to>
		<input>
			<condition>
				<property>/it-autoflight/output/athr-on</property>
			</condition>
			<property>/fdm/jsbsim/fadec/ats-cmd</property>
		</input>
		<input>/controls/cockpit/throttle-lever[0]</input>
		<output>/fdm/jsbsim/fadec/ats-cmd-1</output>
		<max-rate-of-change>
			<condition>
				<property>/it-autoflight/output/athr-on</property>
			</condition>
			<value>0.3</value>
		</max-rate-of-change>
		<max-rate-of-change>100</max-rate-of-change>
	</filter>
	
	<filter>
		<name>System Command: Throttle Backdrive 1</name>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<property>/it-autoflight/output/athr-on</property>
			</condition>
		</enable>
		<input>/fdm/jsbsim/fadec/ats-cmd-1</input>
		<output>/controls/engines/engine[0]/throttle</output>
	</filter>
	
	<!-- Engine 2 -->
	<filter>
		<name>System Command: Throttle 2 Filter</name>
		<type>noise-spike</type>
		<initialize-to>output</initialize-to>
		<input>
			<condition>
				<property>/it-autoflight/output/athr-on</property>
			</condition>
			<property>/fdm/jsbsim/fadec/ats-cmd</property>
		</input>
		<input>/controls/cockpit/throttle-lever[1]</input>
		<output>/fdm/jsbsim/fadec/ats-cmd-2</output>
		<max-rate-of-change>
			<condition>
				<property>/it-autoflight/output/athr-on</property>
			</condition>
			<value>0.3</value>
		</max-rate-of-change>
		<max-rate-of-change>100</max-rate-of-change>
	</filter>
	
	<filter>
		<name>System Command: Throttle Backdrive 2</name>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<property>/it-autoflight/output/athr-on</property>
			</condition>
		</enable>
		<input>/fdm/jsbsim/fadec/ats-cmd-2</input>
		<output>/controls/engines/engine[1]/throttle</output>
	</filter>
	
	<!-- Engine 3 -->
	<filter>
		<name>System Command: Throttle 3 Filter</name>
		<type>noise-spike</type>
		<initialize-to>output</initialize-to>
		<input>
			<condition>
				<property>/it-autoflight/output/athr-on</property>
			</condition>
			<property>/fdm/jsbsim/fadec/ats-cmd</property>
		</input>
		<input>/controls/cockpit/throttle-lever[2]</input>
		<output>/fdm/jsbsim/fadec/ats-cmd-3</output>
		<max-rate-of-change>
			<condition>
				<property>/it-autoflight/output/athr-on</property>
			</condition>
			<value>0.3</value>
		</max-rate-of-change>
		<max-rate-of-change>100</max-rate-of-change>
	</filter>
	
	<filter>
		<name>System Command: Throttle Backdrive 3</name>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<property>/it-autoflight/output/athr-on</property>
			</condition>
		</enable>
		<input>/fdm/jsbsim/fadec/ats-cmd-3</input>
		<output>/controls/engines/engine[2]/throttle</output>
	</filter>

</PropertyList>
