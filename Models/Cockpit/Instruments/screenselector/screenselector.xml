<PropertyList>
	
	<path>screenselector.ac</path>
	
	<animation>
		<name>Panel lighting</name>
		<type>material</type>
		<object-name>Labels</object-name>
		<emission>
			<red>1.0</red>
			<green>0.85</green>
			<blue>0.6</blue>
			<factor-prop>controls/lighting/main-integ-norm</factor-prop>
		</emission>
	</animation>
	
	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>Labels</object-name>
	</effect>
    
	<!-- Right now, only 0 and 1 are supported due to the display shaders -->
	<animation>
		<type>knob</type>
		<object-name>scrn.1.knob</object-name>
		<property>controls/cockpit/screensel/du1-dimmer</property>
		<factor>-275</factor>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
		<center>
			<x-m>-0.0182</x-m>
			<y-m>-0.0336</y-m>
			<z-m>0.0053</z-m>
		</center>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/du/du1-dimmer</property>
				<factor>1</factor>
				<min>0</min>
				<max>1</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>
	
